// Practico 3.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"
using namespace std;

int suma (int n);

void main()
{
	int n, s=0;
	cout<<"Ingrese el limite de la serie: "<<endl;
	cin>>n;

	s=suma(n);
	cout<<"El resultado de la serie es: "<<s<<endl;
	getch();
}

int suma (int n)
{
	int s=0;
	for(float i=1;i<=n;i=i+2)
	{
			s=s+i;
	}
	return s;
}
